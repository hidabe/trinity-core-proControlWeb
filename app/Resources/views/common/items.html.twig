<div class="box box-default collapsed-box">
    <div class="box-header with-border">
        <h3 class="box-title">
            <span class="pull-left badge bg-aqua">{{ characterInventories|length }}</span>
            &nbsp;View inventary
        </h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {% for ci in characterInventories %}
            {% include 'common/item.html.twig' with {'itemId': ci.itemInstance.itemEntry } %}
        {% endfor %}
    </div>
    <!-- /.box-body -->
</div>